<h1>Games</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th>Platform</th>
    <th></th>
    <th>Selling Price</th>
    <th></th>
    <th>Buying Cost</th>
    <th></th>
    <th>Developer</th>
    <th></th>
    <th>Stock</th>
  </tr>
  <% for game in @games %>
  <tr>
    <td><a href="/games/<%= game.id %>"><%= game.title %></a></td>
    <td>|</td>
    <td><%= game.platform %></td>
    <td>|</td>
    <td><%= game.selling_price %></td>
    <td>|</td>
    <td><%= game.buying_cost %></td>
    <td>|</td>
    <td><%= game.developer %></td>
    <td>|</td>
    <td><%= game.stock %></td>
  </tr>
  <% end %>
</table>
